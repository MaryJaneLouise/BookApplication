<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.FavoriteBooksActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="16dp">
            <EditText
                android:id="@+id/id_all_book_search_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Search favorite books"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_no_books_available"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="There is no favorite books."
            android:gravity="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_books_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>